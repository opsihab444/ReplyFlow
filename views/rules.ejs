<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ReplyFlow - <%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            whatsapp: { 500: '#25D366', 600: '#20BA5A', 700: '#1B9E4E' }
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes slideIn { from { transform: translateX(-100%); } to { transform: translateX(0); } }
    @keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-10px); } }
    .animate-fadeIn { animation: fadeIn 0.6s ease-out; }
    .animate-slideIn { animation: slideIn 0.4s ease-out; }
    .animate-float { animation: float 3s ease-in-out infinite; }
    .glass { background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.3); }
    .dark .glass { background: rgba(31, 41, 55, 0.7); border: 1px solid rgba(75, 85, 99, 0.3); }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-50 via-green-50 to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 min-h-screen">
  
  <!-- Sidebar -->
  <aside class="fixed left-0 top-0 h-full w-64 bg-white dark:bg-gray-800 shadow-2xl z-40">
    <div class="p-6">
      <div class="flex items-center space-x-3 mb-8">
        <div class="w-12 h-12 rounded-2xl flex items-center justify-center shadow-lg animate-float">
          <img src="/logo.svg" alt="ReplyFlow Logo" class="w-full h-full">
        </div>
        <div>
          <h1 class="text-lg font-bold bg-gradient-to-r from-whatsapp-500 to-whatsapp-700 bg-clip-text text-transparent">ReplyFlow</h1>
          <p class="text-xs text-gray-500 dark:text-gray-400">Smart Auto Reply</p>
        </div>
      </div>

      <nav class="space-y-2">
        <a href="/" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-xl transition-all">
          <i class="fas fa-home text-lg"></i>
          <span class="font-medium">Dashboard</span>
        </a>
        <a href="/rules" class="flex items-center space-x-3 px-4 py-3 bg-gradient-to-r from-whatsapp-500 to-whatsapp-600 text-white rounded-xl shadow-lg">
          <i class="fas fa-list text-lg"></i>
          <span class="font-medium">Rules</span>
        </a>
        <a href="/logs" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-xl transition-all">
          <i class="fas fa-history text-lg"></i>
          <span class="font-medium">Logs</span>
        </a>
      </nav>

      <div class="absolute bottom-6 left-6 right-6">
        <button id="themeToggle" class="w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-all flex items-center justify-center space-x-2">
          <i class="fas fa-moon dark:hidden text-gray-700"></i>
          <i class="fas fa-sun hidden dark:inline text-yellow-400"></i>
          <span class="font-medium text-gray-700 dark:text-gray-300">Toggle Theme</span>
        </button>
      </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="ml-64 p-8">
    
    <!-- Header -->
    <div class="flex justify-between items-center mb-8 animate-fadeIn">
      <div>
        <h2 class="text-4xl font-bold bg-gradient-to-r from-whatsapp-500 to-blue-600 bg-clip-text text-transparent mb-2 flex items-center">
          <i class="fas fa-robot text-whatsapp-500 mr-3"></i>Auto-Reply Rules
        </h2>
        <p class="text-gray-600 dark:text-gray-400">Create and manage your ReplyFlow automated responses</p>
      </div>
      <button id="openAddRuleModal" class="px-8 py-4 bg-gradient-to-r from-whatsapp-500 to-whatsapp-600 text-white rounded-2xl font-semibold shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all">
        <i class="fas fa-plus-circle mr-2"></i>Add New Rule
      </button>
    </div>

    <!-- Rules Container -->
    <div id="rulesContainer" class="space-y-4">
      <div class="flex items-center justify-center py-20">
        <div class="animate-spin">
          <i class="fas fa-circle-notch text-5xl text-whatsapp-500"></i>
        </div>
      </div>
    </div>

  </main>

  <!-- Add/Edit Rule Modal -->
  <div id="ruleModal" class="hidden fixed inset-0 bg-black bg-opacity-60 backdrop-blur-sm z-50 flex items-center justify-center p-4 overflow-y-auto">
    <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl max-w-3xl w-full my-8 transform scale-95 opacity-0 transition-all duration-300" id="ruleModalContent">
      <div class="p-8">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-3xl font-bold text-gray-800 dark:text-white flex items-center" id="modalTitle">
            <i class="fas fa-plus-circle text-whatsapp-500 mr-3"></i>Add New Rule
          </h3>
          <button id="closeRuleModal" class="w-12 h-12 bg-gray-100 dark:bg-gray-700 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-all flex items-center justify-center">
            <i class="fas fa-times text-gray-600 dark:text-gray-300 text-xl"></i>
          </button>
        </div>

        <!-- Form -->
        <form id="ruleForm" class="space-y-6">
          <input type="hidden" id="ruleId">
          
          <!-- Pattern -->
          <div class="animate-fadeIn">
            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3 flex items-center">
              <i class="fas fa-search text-whatsapp-500 mr-2"></i>Message Pattern *
            </label>
            <input type="text" id="pattern" required
              class="w-full px-6 py-4 bg-gray-50 dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-4 focus:ring-whatsapp-200 focus:border-whatsapp-500 transition-all text-gray-800 dark:text-white text-lg"
              placeholder="e.g., hello, help, price">
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-2 ml-1">
              <i class="fas fa-info-circle mr-1"></i>Keyword that triggers the auto-reply
            </p>
          </div>

          <!-- Response -->
          <div class="animate-fadeIn" style="animation-delay: 0.1s">
            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3 flex items-center">
              <i class="fas fa-comment-dots text-whatsapp-500 mr-2"></i>Auto Response *
            </label>
            <textarea id="response" rows="4" required
              class="w-full px-6 py-4 bg-gray-50 dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-4 focus:ring-whatsapp-200 focus:border-whatsapp-500 transition-all text-gray-800 dark:text-white text-lg resize-none"
              placeholder="e.g., Hi! How can I help you today?"></textarea>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-2 ml-1">
              <i class="fas fa-info-circle mr-1"></i>Message to send automatically
            </p>
          </div>

          <!-- Options Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 animate-fadeIn" style="animation-delay: 0.2s">
            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3 flex items-center">
                <i class="fas fa-users text-whatsapp-500 mr-2"></i>Chat Type
              </label>
              <select id="chatType"
                class="w-full px-6 py-4 bg-gray-50 dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-4 focus:ring-whatsapp-200 focus:border-whatsapp-500 transition-all text-gray-800 dark:text-white text-lg">
                <option value="all">All Chats</option>
                <option value="individual">Individual Only</option>
                <option value="group">Group Only</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3 flex items-center">
                <i class="fas fa-clock text-whatsapp-500 mr-2"></i>Delay (seconds)
              </label>
              <input type="number" id="delay" min="0" max="60" value="0"
                class="w-full px-6 py-4 bg-gray-50 dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-4 focus:ring-whatsapp-200 focus:border-whatsapp-500 transition-all text-gray-800 dark:text-white text-lg">
            </div>
          </div>

          <!-- Checkboxes -->
          <div class="space-y-4 animate-fadeIn" style="animation-delay: 0.3s">
            <label class="flex items-center space-x-4 cursor-pointer group p-4 bg-gray-50 dark:bg-gray-700 rounded-2xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-all">
              <input type="checkbox" id="caseSensitive"
                class="w-6 h-6 text-whatsapp-500 bg-white dark:bg-gray-600 border-2 border-gray-300 dark:border-gray-500 rounded-lg focus:ring-4 focus:ring-whatsapp-200 transition-all">
              <span class="text-gray-700 dark:text-gray-300 font-medium text-lg">
                <i class="fas fa-font mr-2 text-whatsapp-500"></i>Case Sensitive Matching
              </span>
            </label>

            <label class="flex items-center space-x-4 cursor-pointer group p-4 bg-gray-50 dark:bg-gray-700 rounded-2xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-all">
              <input type="checkbox" id="enabled" checked
                class="w-6 h-6 text-whatsapp-500 bg-white dark:bg-gray-600 border-2 border-gray-300 dark:border-gray-500 rounded-lg focus:ring-4 focus:ring-whatsapp-200 transition-all">
              <span class="text-gray-700 dark:text-gray-300 font-medium text-lg">
                <i class="fas fa-toggle-on mr-2 text-whatsapp-500"></i>Enable Rule
              </span>
            </label>
          </div>

          <!-- Actions -->
          <div class="flex space-x-4 pt-6 animate-fadeIn" style="animation-delay: 0.4s">
            <button type="submit" id="submitBtn"
              class="flex-1 px-8 py-4 bg-gradient-to-r from-whatsapp-500 to-whatsapp-600 text-white rounded-2xl font-bold text-lg shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all">
              <i class="fas fa-save mr-2"></i>Save Rule
            </button>
            <button type="button" id="cancelBtn"
              class="px-8 py-4 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-2xl font-bold text-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-all">
              <i class="fas fa-times mr-2"></i>Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>
